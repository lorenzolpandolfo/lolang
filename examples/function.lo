fn int subtractArrayElements(array arr) {

    for int i=0; i<length(arr); i=i+1 {
        int next_number_i = i

        if i === length(arr) - 1 {
            next_number_i = -1
        }

        int n = arr[i]
        int m = arr[next_number_i + 1]
        int v = subtrair(n, m)

        println(" - Subtraindo ", n, " - ", m, ": ", v, "&green")
    }
}

