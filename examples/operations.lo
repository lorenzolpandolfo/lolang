// operadores aritméticos: + - / * ** % $ ($ customizado, para raiz)
// operadores de comparacao: != == === (=== customizado, para comparação sem considerar o tipo do dado)
// operadores lógicos: && ||

println("[Realizando operações aritméticas com variáveis]", "&red")
println()

// soma
int a = 5
int b = 3
int c = a + b

println("[Soma]", "&magenta")
println("A soma de ", a, " + ", b, " é igual a ", c, "&green")
println()

// subtração
int c = a - b

println("[Subtração]", "&magenta")
println("O valor ", a, " - ", b, " é igual a ", c, "&green")
println()

// Calculando a circunferência de um círculo
println("[Calculando a circunferência de um círculo]", "&magenta")
float pi = 3.14159
int r = 5
float circ = 2 * pi * r

println("- Raio: ", r, "cm", "&green")
println("- Circunferência: ", circ, "cm", "&green")
println()

// Elevando ao quadrado
println("[Elevando ao quadrado]", "&magenta")
int a = 5
int b = 2
int c = a ** b
println("- O número ", a, " elevado a ", b, " é igual a: ", c, "&yellow")
println()

// Elevando ao cubo
println("[Elevando ao cubo]", "&magenta")
int a = 10
int b = 3
int c = a ** b
println("- O número ", a, " elevado a ", b, " é igual a: ", c, "&yellow")
println()

// Resto da divisão
println("[Resto da divisão]", "&magenta")
int a = 10
int b = 2
int c = a % b
println("- O resto da divisão de ", a, "/", b, " é igual a: ", c, "&magenta")
println()

println("[Raízes]", "&magenta")

