println("\n[Operadores lógicos: && / and]", "&yellow")

int c = 1 && 1
println("1 && 1 = ", c, "&green")

int c = 1 && 0
println("1 && 0 = ", c, "&green")

int c = 0 && 1
println("0 && 1 = ", c, "&green")

int c = 0 && 0
println("0 && 0 = ", c, "&green")

println()
println("[Operadores lógicos: || / or]", "&yellow")

int c = 1 || 1
println("1 || 1 = ", c, "&green")

int c = 1 || 0
println("1 || 0 = ", c, "&green")

int c = 0 || 1
println("0 || 1 = ", c, "&green")

int c = 0 || 0
println("0 || 0 = ", c, "&green")

println()
println("[Operador === : igual independente do tipo]", "&yellow")

boolean c = 3 === "3"
println("3 === '3' = ", c, "&green")

boolean c = 3 !== "3"
println("3 !== '3' = ", c, "&green")
println()

boolean c = "Joao" === "3"
println("Joao === '3' = ", c, "&green")

boolean c = "Joao" === "Joao"
println("Joao === 'Joao' = ", c, "&green")

println()
println("[Operador not : negação]", "&yellow")

boolean c = true
println("not true  = ", not c, "&green")
boolean c = false
println("not false = ", not c, "&green")
